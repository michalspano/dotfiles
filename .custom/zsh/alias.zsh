# ===============================  DEV Tools  ==================================

alias v="nvim"
alias f="fish"
alias lz="lazygit"
alias nf="neofetch"
alias rr="reminders"

alias vv="$XDG_CUSTOM_HOME/scripts/which-nvim.sh"
alias zz="source $XDG_CUSTOM_HOME/scripts/set-zathura.sh"
alias firefox="/Applications/Firefox.app/Contents/MacOS/firefox"

# ================================  System  ===================================

alias sys-sleep="pmset sleepnow"
alias sys-save="open -b com.apple.ScreenSaver.Engine"
alias sys-restart="sudo shutdown -r now"
alias sys-shutdown="sudo shutdown -h now"
alias sys-lock="$XDG_CUSTOM_HOME/scripts/lockscreen.scpt" # FIXME
alias sys-new-desktop="$XDG_CUSTOM_HOME/scripts/new_dekstop.scpt"
                                                                        
alias icons-on="$XDG_CUSTOM_HOME/scripts/icons_on.scpt"
alias icons-off="$XDG_CUSTOM_HOME/scripts/icons_off.scpt"
                                                                        
alias sc-monitor-on="open /Applications/DisplayLink\ Manager.app"
alias sc-monitor-off="$XDG_CUSTOM_HOME/scripts/secondary-display-on.scpt"

# ================================  Personal  ==================================

alias sp="spotify"
alias spn="spotify next"
alias spp="spotify play"
alias sps="spotify status"

alias wnr="$XDG_CUSTOM_HOME/scripts/week.sh"
alias facetime="$XDG_CUSTOM_HOME/scripts/facetime.sh"

alias al-sw="$XDG_CUSTOM_HOME/scripts/alacritty-theme.sh"
alias stopwatch="$XDG_CUSTOM_HOME/scripts/stopwatch.sh"

. $XDG_CUSTOM_HOME/zsh/private.zsh

