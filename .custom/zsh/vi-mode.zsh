#  https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/vi-mode.

VI_MODE_SET_CURSOR=true

VI_MODE_CURSOR_NORMAL=2 # Solid block
VI_MODE_CURSOR_VISUAL=2 # Solid block
VI_MODE_CURSOR_INSERT=6 # Thin line
VI_MODE_CURSOR_OPPEND=0

# Ensure that the prompt correctly corresponds to the current mode.
VI_MODE_RESET_PROMPT_ON_MODE_CHANGE=true

# Display visual cues (on the absolute right) about the current mode.
# Use white for NORMAL, green for INSERT.
MODE_INDICATOR="%F{white}[N]%f"
INSERT_MODE_INDICATOR="%F{green}[I]%f"

